FROM python:3.12-alpine

ENV FLASK_APP regalias/src/app.py
ENV FLASK_RUN_HOST 0.0.0.0

WORKDIR /regalias

RUN apk add --no-cache gcc musl-dev linux-headers

COPY requirements.txt ./

RUN pip install --no-cache-dir -r requirements.txt

COPY . ./regalias

# # Copia el script y da permisos de ejecuci√≥n
# COPY scripts/wait-for-it.sh /regalias/scripts/wait-for-it.sh
# RUN chmod +x /regalias/scripts/wait-for-it.sh

# # CMD establece el comando predeterminado a ejecutar cuando se inicia el contenedor
# CMD ["./scripts/wait-for-it.sh", "postgres:5432", "--", "flask", "run"]
CMD ["flask", "run"]
